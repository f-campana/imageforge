{
  "name": "@imageforge/cli",
  "version": "0.1.0",
  "description": "Image optimization pipeline for Next.js. Blur placeholders + WebP/AVIF conversion in one command.",
  "author": "Fabien Campana",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiendotc/imageforge"
  },
  "bugs": {
    "url": "https://github.com/fabiendotc/imageforge/issues"
  },
  "homepage": "https://github.com/fabiendotc/imageforge#readme",
  "packageManager": "pnpm@10.28.2",
  "bin": {
    "imageforge": "./dist/cli.js"
  },
  "main": "./dist/types.js",
